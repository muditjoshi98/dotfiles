#!/bin/bash
# saberto's media keys script


function notify() {
	dunstify -r 69 -u "LOW" -t 300 "$1"
	#notify-send -t 150 -u "LOW" "$1"
}

function volume () {
	volume="$(amixer sget Master | grep 'Left:' | awk -F'[][]' '{ print $2 }')"
	case $1 in
		change)
			notify "ðŸ”Š Volume $volume"
		;;
		mute)
			notify "ðŸ”‡ Sound Muted"
		;;
		unmute)
			notify "ðŸ”Š Sound Unmuted"
		;;
	esac
}

function mixer() {
	amixer -D pulse -q sset Master $1	
}

function brightness {
	brightness="$(xbacklight -get | cut -d '.' -f 1)"
	case $1 in
		up)
			notify "ðŸ”† Brightness $brightness"
		;;
		down)
			notify "ðŸ”… Brightness $brightness"
		;;
	esac

}
	
case $1 in 
	up)
		mixer 3%+
		volume change
		exit
        ;;
	down)
		mixer 3%-
		volume change
		exit
        ;;
    	mute)
		mixer toggle
		if [[ $(amixer sget Master | grep "\[off\]") ]]; then
			volume mute
		else
			volume unmute
		fi
		exit
        ;;
	play-pause)
		playerctl play-pause
		exit
	;;
	next)
		playerctl next
		exit
	;;
	prev)
		playerctl previous
		exit
	;;
	bup)
		xbacklight -inc 5
		brightness up
		exit
	;;
	bdown)
		xbacklight -dec 5
		brightness down
		exit
	;;	
esac

