client.background       #212121


bindsym XF86AudioPrev			exec --no-startup-id playerctl previous
bindsym XF86AudioNext			exec --no-startup-id playerctl next
bindsym XF86AudioPlay			exec --no-startup-id playerctl play-pause
bindsym XF86AudioMute			exec --no-startup-id amixer -q -D pulse sset Master 1+ toggle && notify-send -t 500 -i "notification-audio-volume-muted" "Mute : $([[ $(amixer get Master | grep '%' | head -n 1 | grep -oE '[^ ]+$' | cut -d '[' -f 2 | cut -d ']' -f 1) = on ]] && echo "OFF" || echo "ON")"
bindsym XF86AudioRaiseVolume	exec --no-startup-id amixer -q -D pulse sset Master 2%+ && notify-send -t 300 -i "notification-audio-volume-high" "Volume : $(amixer get Master | grep '%' | head -n 1 | cut -d  '[' -f 2 | cut  -d '%' -f 1)"
bindsym XF86AudioLowerVolume	exec --no-startup-id amixer -q -D pulse sset Master 2%- && notify-send -t 300 -i "notification-audio-volume-low" "Volume : $(amixer get Master | grep '%' | head -n 1 | cut -d  '[' -f 2 | cut  -d '%' -f 1)"
bindsym XF86MonBrightnessUp		exec --no-startup-id xbacklight -inc 5 && notify-send -t 300 -i "brightnesssettings" "Brightness : $(xbacklight -get | cut -d '.' -f 1)"
bindsym XF86MonBrightnessDown	exec --no-startup-id xbacklight -dec 5 && notify-send -t 300 -i "brightnesssettings" "Brightness : $(xbacklight -get | cut -d '.' -f 1)"
bindsym $mod+n					exec --no-startup-id redshift -O 2500 && notify-send -i "redshift" "Night Light : ON"
bindsym $mod+Shift+n			exec --no-startup-id redshift -x && notify-send -i "redshift" "Night Light : OFF"
bindsym $mod+Escape				exec --no-startup-id xset s activate
bindsym Print					exec --no-startup-id $HOME/.archbox/bin/screenshot.sh

